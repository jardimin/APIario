<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %> - Codem Scheduler</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<%= render "/layouts/help" %>

<div class="frame">
  <div class="sidebar">
    <div class="wrapper">
      <%= render '/layouts/help' %>
      <%= render "/layouts/menu" %>
    </div>
  </div>

  <div class="content">
    <div class="navbar navbar-static-tops">
      <div class="navbar-inner">
        <%= link_to 'Codem', root_url, class: 'brand' %>
      </div>
    </div>

    <div class="content-head">
      <form action="<%= jobs_path %>" method="get" class="navbar-search pull-right">
        <%= search_field_tag 'q', params[:q], class: 'form-control search-query', placeholder: 'Search' %>
        <a href="#help" role="button" class="btn" data-toggle="modal">Help</a>
      </form>

      <h1 class="title"><%= link_to yield(:title), url_for(params.slice(:controller, :action)) %></h1>


      <div class="content-body">
      <% flash.each do |name, message| %>
        <div class="alert alert-block alert-<%= name %>">
          <a class="close" data-dismiss="alert">Ã—</a>
          <%= h message %>
        </div>
      <% end %>

      <%= yield %>


    </div>
  </div>
</div>

</body>
</html>
