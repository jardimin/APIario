extends layout

block content
  .container
    form.form-signin(method='post', action='', role='form')
      h2.form-signin-heading Por favor loge-se
      .form-group
        input.form-control(name='email', type='email', placeholder='Seu email')
      .form-group
        input.form-control(name='password', type='password', placeholder='Sua senha')
      .form-group
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Acessar
